{
  "name": "pi-music-2025",
  "version": "1.0.0",
  "description": "A simple music player for Raspberry Pi",
  "main": "main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electronmon .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --linux --armv7l",
    "dist:arm64": "electron-builder --linux --arm64"
  },
  "keywords": ["music", "player", "raspberry-pi"],
  "author": "davepol",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "electronmon": "^2.0.3",
    "music-metadata": "^11.9.0"
  },
  "build": {
    "appId": "com.davepol.pi-music-2025",
    "productName": "Pi Music",
    "files": [
      "main/**/*",
      "renderer/**/*",
      "preload/**/*",
      "assets/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["arm64"]
        },
        {
          "target": "AppImage",
          "arch": ["arm64"]
        }
      ],
      "category": "AudioVideo",
      "maintainer": "davepol",
      "synopsis": "Music player for Raspberry Pi",
      "description": "A simple music player for Raspberry Pi 5",
      "icon": "assets/icon.png",
      "executableName": "pi-music"
    }
  }
}